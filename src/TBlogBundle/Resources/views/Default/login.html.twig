<script>
    $(document).ready(function () {
        $("#Ingresar").click(function () {
            if($("#usuario").val() == "" ) alert("Numero de Control es requerido.");
            else if($("#contrasena").val() == "") alert("Contraseña es requerida.");
            //val   ida que los campos esten llenos
            else {
                $.ajax({
                    url:"{{ path('Login') }}",
                    //te envia a la ruta de default controller
                    type: 'POST',
                    data: $(".validate").serialize(),
                    success:function(respuesta){
                        alert(respuesta);
                        if($.trim(respuesta) == 0){
                            //la respuesta va a haccer lo que devuelva el default controller ya sea 0 o 1
                            document.location.href = "{{ path('Inicio') }}";
                          }
                        if($.trim(respuesta) == 1){
                            //la respuesta va a haccer lo que devuelva el default controller ya sea 0 o 1
                            document.location.href = "{{ path('InicioA') }}";
                        }
                    },
                });
            }
        });
    });
</script>